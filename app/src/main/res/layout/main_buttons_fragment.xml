<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context="com.isthisloss.antouchclient.MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="25dp">

    <Button
        android:id="@+id/btnEsc"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_weight="0.93"
        android:background="@android:color/background_light"
        android:onClick="onButtonClick"
        android:text="ESC"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintRight_toLeftOf="@+id/btnUp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btnUp"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:background="@android:color/background_light"
        android:elevation="0dp"
        android:onClick="onButtonClick"
        android:text="Up"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintRight_toLeftOf="@+id/btnEnter"
        app:layout_constraintLeft_toRightOf="@+id/btnEsc"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btnLeft"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:background="@android:color/background_light"
        android:onClick="onButtonClick"
        android:text="Left"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintRight_toLeftOf="@+id/btnDown"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnEsc" />

    <Button
        android:id="@+id/btnDown"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:background="@android:color/background_light"
        android:onClick="onButtonClick"
        android:text="Down"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintRight_toLeftOf="@+id/btnRight"
        app:layout_constraintLeft_toRightOf="@+id/btnLeft"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnUp" />

    <Button
        android:id="@+id/btnEnter"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:background="@android:color/background_light"
        android:onClick="onButtonClick"
        android:text="ENTER"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btnUp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btnRight"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:background="@android:color/background_light"
        android:onClick="onButtonClick"
        android:text="Right"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btnDown"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnEnter" />

</android.support.constraint.ConstraintLayout>
